{
    "extends": "eslint",
    "env": {
        "es2020": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "overrides": [
        {
            "files": ["*.cjs"],
            "parserOptions": {
                "sourceType": "script"
            }
        }
    ],
    "ignorePatterns": ["/dist", "/coverage"]
}
